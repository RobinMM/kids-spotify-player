# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Redirect URI - must match exactly what you set in Spotify Developer Dashboard
# Note: Use 127.0.0.1 (not localhost) for Spotify compatibility
SPOTIFY_REDIRECT_URI=http://127.0.0.1:5000/callback

# Flask Configuration
FLASK_SECRET_KEY=your_random_secret_key_here

# Device Filter (Optional - comma-separated for multiple devices)
# Controls which Spotify devices can use playback controls
# Leave empty to allow all devices
# Example: SPOTIFY_DEVICE_NAME=DESKTOP-16R31VC,RaspberryPi
SPOTIFY_DEVICE_NAME=

# Settings PIN (6 digits)
# Required to access Bluetooth and Other settings tabs
SETTINGS_PIN=123456
